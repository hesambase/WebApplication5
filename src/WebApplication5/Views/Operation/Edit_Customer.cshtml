@using WebApplication4.Models
@model Customer

@*@{
    ViewBag.Title = Model.Name;
}
<h1>@Model.Name</h1>*@
<h1 style="font-family:'B titr'">ویرایش اطلاعات مشتری</h1>
<form method="post">
    <div class="form-group">
        <label asp-for="Id"></label>
        <input asp-for="Id" type="text" readonly class="form-control" />
    </div>
    <div>

        <label asp-for="Name">نام و نام خانوادگی</label>
        <input asp-for="Name" type="text" class="form-control"/>
        <span asp-validation-for="Name"></span>
    </div>

    <div>

        <label asp-for="Address">نوع سرویس</label>
        <input asp-for="Address" type="text"  class="form-control"/>
        <span asp-validation-for="Address"></span>
    </div>
    <div>
        <label asp-for="CustNo">شماره مشتری</label>
        <input asp-for="CustNo"  class="form-control"/>
        <span asp-validation-for="CustNo" ></span>
    </div>
    <div>
        <label asp-for="Tel">تلفن</label>
        <input asp-for="Tel"  class="form-control"/>
        <span asp-validation-for="Tel"></span>
    </div>
    <div>
        <label asp-for="Mobile">موبایل</label>
        <input asp-for="Mobile"  class="form-control"/>
        <span asp-validation-for="Mobile"></span>
    </div>

    <div>
        <label asp-for="Email">ایمیل</label>
        <input asp-for="Email"  class="form-control"/>
        <span asp-validation-for="Email"></span>
    </div>
    <input type="submit" name="save" value="Save" />
    <a asp-action="Index" asp-controller="Operation">واحد عملیات</a>
   
</form>

