@using WebApplication4.Models
@model Customer

@{
    ViewBag.Title = "ایجاد";
}
<h1 style="font-family:'B titr'">ثبت مشنری جدید</h1>
<form  method="post">
    <div>
        <label asp-for="Name">نام و نام خانوادگی</label>
        <input asp-for="Name"  class="form-control"/>
        <span asp-validation-for="Name"></span>
    </div>
    
    <div>

        <label asp-for="Address">آدرس</label>
        <input asp-for="Address" class="form-control"/>
        <span asp-validation-for="Address"></span>
    </div>
    <div>
        <label asp-for="CustNo">شماره مشتری</label>
        <input asp-for="CustNo"  class="form-control"/>
        <span asp-validation-for="CustNo"></span>
    </div>
    <div>
        <label asp-for="Tel">تلفن</label>
        <input asp-for="Tel"  class="form-control"/>
        <span asp-validation-for="Tel"></span>
    </div>
    <div>
        <label asp-for="Mobile">موبایل</label>
        <input asp-for="Mobile"  class="form-control"/>
        <span asp-validation-for="Mobile"></span>
    </div>
    
    <div>
        <label asp-for="Email">ایمیل</label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email"></span>
    </div>
    <br/>
    <div>
         <input type="submit" name="save" value="Save"  class="form-control-static"/>
          <a asp-action="Index" asp-controller="Operation">خانه</a>
    </div>
</form>
