@using WebApplication2.Models
@model Worker

@{
    ViewBag.Title = "ایجاد";
}
<h1 style="font-family:'B titr'">ثبت کارگر جدید</h1>
<form  method="post">
    <div>
        <label asp-for="Name">نام و نام خانوادگی</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name"></span>
    </div>
    
    <div>

        <label asp-for="Service">نوع سرویس</label>
        <select asp-for="Service" asp-items="@Html.GetEnumSelectList<ServiceType>()"  class="form-control"></select>
        <span asp-validation-for="Service"></span>
    </div>
    <div>
        <label asp-for="WorkerNo">شماره کارگر</label>
        <input asp-for="WorkerNo"  class="form-control" />
        <span asp-validation-for="WorkerNo"></span>
    </div>
    <div>
        <label asp-for="Tel">تلفن</label>
        <input asp-for="Tel" class="form-control" />
        <span asp-validation-for="Tel"></span>
    </div>
    <div>
        <label asp-for="Mobile">موبایل</label>
        <input asp-for="Mobile" class="form-control" />
        <span asp-validation-for="Mobile"></span>
    </div>
    <div>
        <label asp-for="Email">ایمیل</label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email"></span>
    </div>
    <div>
        <label asp-for="Password">رمز عبور</label>
        <input asp-for="Password" class="form-control" />
        <span asp-validation-for="Password"></span>
    </div>
    <br/>
    <div>
        <input type="submit" name="save" value="Save" class="form-control-static " />
       
        <a asp-action="Index" asp-controller="Operation">واحد عملیات</a>
    </div>
</form>
